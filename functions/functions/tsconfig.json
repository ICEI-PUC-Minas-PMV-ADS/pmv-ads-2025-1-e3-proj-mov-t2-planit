{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",                     
    "lib": ["es2017", "dom"],
    "outDir": "lib",
    "rootDir": "src",                      
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src"]
}

